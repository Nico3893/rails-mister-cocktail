<div class="container">
  <h1>Cocktail list</h1>
  <div class="cards">
    <% @cocktails.each do |drink| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path drink.photo, height: 300, width: 400, crop: :fill, gravity: :auto; %>')">
        <%= link_to drink.name, cocktail_path(drink), class: "btn btn-outline-info" %>
      </div>
    <% end %>
  </div>
  <%= link_to "New Cocktail", new_cocktail_path, class: "btn btn-primary btn-block" %>
</div>




