
<div class="container">
  <h1>Please add a new cocktail</h1>
  <%= simple_form_for(@cocktail) do |f| %>
  <%= f.input :name %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit "Add your Cocktail", class: "btn btn-primary" %>
  <% end %>
  <br>
  <br>
  <br>
  <br>
  <%= link_to "Back to List", cocktails_path, class: "btn btn-outline-secondary" %>
</div>

